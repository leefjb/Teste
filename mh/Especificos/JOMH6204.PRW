User Function JOMH6204()

Local _aArea := GetArea()
Local nPIS := 0

cPref := SF2->F2_SERIE
cNota := SF2->F2_DOC

DbSelectArea("SE1")
DbSetOrder(1)
DbSeek(xFilial("SE1")+CPREF+CNOTA )
While !eof() .And. SE1->E1_FILIAL + SE1->E1_PREFIXO + SE1->E1_NUM == xFilial("SE1")+CPREF+CNOTA
	If SE1->E1_TIPO == "PI-"
		nPIS += SE1->E1_VALOR
	EndIf
    dbskip()
enddo
RestArea(_aArea)

Return(nPIS)
